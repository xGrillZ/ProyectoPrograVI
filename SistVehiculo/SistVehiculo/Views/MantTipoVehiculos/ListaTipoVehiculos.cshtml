<!--Indicar a la vista el modelo-->
@model List<SistVehiculo.Models.pa_RetornaTiposVehiculo_Result>

@section css{
    <link href="~/Content/mantTipoVehiculos/mantTipoVehiculos.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Lista Tipos Vehículos";
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<h2>Lista de Tipos de Vehículos</h2>
<a href="~/MantTipoVehiculos/InsertarTipoVehiculos" class="btn btn-success"><i class="fas fa-user-plus"></i> Agregar Tipo Vehículo</a>
<form id="frmBusquedaTipoVehiculos" method="post">
    <div class="row">
        <div class="form-group col">
            <label>Código:</label>
            <input type="text" name="codigo" id="codigo" class="form-control" />
        </div>

        <div class="form-group col">
            <label>Tipo:</label>
            <input type="text" name="tipo" id="tipo" class="form-control" />
        </div>

        <div class="form-group col">
            <button type="submit" id="btnAceptar" class="btn btn-info"><i class="fas fa-search"></i> Buscar</button>
        </div>
    </div>
</form>

<table class="table">
    <tr>
        <th>Código</th>
        <th>Tipo</th>
        <th>Acciones</th>
    </tr>
    <!--Incluir código .net
        Recorrido para la vista
        -->
    @{
        foreach (SistVehiculo.Models.pa_RetornaTiposVehiculo_Result posicionModelo in this.Model)
        {
            <tr>
                <td>@posicionModelo.codigo</td>
                <td>@posicionModelo.tipo</td>
                <td>
                    <a href="~/MantTipoVehiculos/ModificarTipoVehiculos?idTipoVehiculo=@posicionModelo.idTipoVehiculo" class="btn btn-warning btnModificar col-md-6">Modificar</a>
                    <br />
                    <a href="~/MantTipoVehiculos/EliminarTipoVehiculos?idTipoVehiculo=@posicionModelo.idTipoVehiculo" class="btn btn-danger btnEliminar col-md-6">Eliminar</a>
                </td>
            </tr>
        }
    }
</table>