@model SistVehiculo.Models.pa_RetornaVehiculosClienteID_Result

@section css{
    <link href="~/Content/mantVehiculosxCliente/mantVehiculosxCliente.css" rel="stylesheet" />
    <link href="~/Content/mantVehiculosxCliente/mantVehiculosxCliente.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "ModificarVehiculosCliente";
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<h2>Modificar Vehiculo Cliente</h2>

<form id="frmModificaVehiculoCliente" method="post">
    <div class="form-group">
        <label>Cliente :</label>
        <select name="idCliente" id="idCliente" class="form-control"></select>
        <input type="hidden" id="hdIdVehiculoCliente" value="@Model.idVehiculosCliente" />
        <input type="hidden" id="hdIdCliente" value="@Model.idCliente" />
        <input type="hidden" id="hdIdVehiculo" value="@Model.idVehiculo" />
        <input type="hidden" id="hdIdTipoVehiculo" value="@Model.tipoVehiculo" />
    </div>
    <div class="form-group">
        <label>Vehiculo:</label>
        <select name="idVehiculo" id="idVehiculo" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Tipo Vehículo:</label>
        <select name="tipoVehiculo" id="tipoVehiculo" class="form-control"></select>
    </div>


    <div class="form-group">
        <button type="submit" id="btnModificar" name="btnModificar" class="btn btn-success btnModificar">Modificar</button>
    </div>
</form>
<a href="~/MantVehiculosCliente/ListaVehiculosCliente" class="btn btn-warning">Regresar a la lista</a>

@section scripts{
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
    <script src="~/Scripts/mantVehiculosCliente/mantVehiculosCliente.js"></script>
}
