
@model List<SistVehiculo.Models.pa_RetornaVehiculosxIDCliente_Result>

@{
    ViewBag.Title = "Lista Vehículos Clientes";
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<h2>Lista de Vehículos</h2>

<a href="~/MantVehiculosCliente/InsertarVehiculosCliente" class="btn btn-success"><i class="fas fa-user-plus"></i> Agregar nuevo Vehículo</a>

<form id="frmBusquedaListaVehiculosCliente" method="post">
    <div class="row">
        <div class="form-group col">
            <label>ID Cliente:</label>
            <input type="text" name="idCliente" id="idCliente" class="form-control" />
        </div>
        
        <div class="form-group col">
            <button type="submit" id="btnAceptar" class="btn btn-info"><i class="fas fa-search"></i> Buscar</button>
        </div>
    </div>
</form>




<table class="table">
    <tr>
        <th>ID Cliente</th>
        <th>Nombre Cliente</th>
        <th>Número Cédula</th>
        <th>Placa</th>
        <th>Marca de Vehiculo</th>
        <th>Tipo de Vehiculo</th>
        <th>Número Teléfono</th>
        <th>Email</th>
    </tr>

    @{
        foreach (SistVehiculo.Models.pa_RetornaVehiculosxIDCliente_Result posicionModelo in this.Model)
        {
            <tr>
                <td>@posicionModelo.idCliente</td>
                <td>@posicionModelo.nomCliente</td>
                <td>@posicionModelo.numCedula</td>
                <td>@posicionModelo.placa</td>
                <td>@posicionModelo.marca</td>
                <td>@posicionModelo.tipo</td>
                <td>@posicionModelo.pTelefono</td>
                <td>@posicionModelo.email</td>
                <td>
                    <a href="~/MantVehiculosCliente/ModificarVehiculosCliente?idVehiculosCliente=@posicionModelo.idVehiculosCliente">Modificar</a>
                    <br />
                    <a href="~/MantVehiculosCliente/EliminarVehiculosCliente?idVehiculosCliente=@posicionModelo.idVehiculosCliente">Eliminar</a>
                </td>
            </tr>
        }
    }
</table>