
@model List<SistVehiculo.Models.pa_RetornaVehiculosCliente_Result>

@section css{
    <link href="~/Content/mantVehiculosxCliente/mantVehiculosxCliente.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Lista Vehículos Clientes";
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<h2>Lista de Vehículos Clientes</h2>

<a href="~/MantVehiculosCliente/InsertarVehiculosCliente" class="btn btn-success"><i class="fas fa-user-plus"></i> Agregar nuevo Vehículo Cliente</a>

<form id="frmBusquedaListaVehiculosCliente" method="post">
    <div class="row rowBusqueda">
        <div class="form-group col">
            <label>Placa:</label>
            <input type="text" name="placa" id="placa" class="form-control" />
        </div>
        <div class="form-group col">
            <label>Nombre Cliente:</label>
            <input type="text" name="nombreCliente" id="nombreCliente" class="form-control" />
        </div>
        <div class="form-group col">
            <label>marca:</label>
            <input type="text" name="marca" id="marca" class="form-control" />
        </div>
        <div class="form-group col">
            <label>Cédula:</label>
            <input type="text" name="numCedula" id="numCedula" class="form-control" />
        </div>

        <div class="form-group col">
            <button type="submit" id="btnAceptar" class="btn btn-info"><i class="fas fa-search"></i> Buscar</button>
        </div>
    </div>
</form>




<table class="table">
    <tr>
        <th>Nombre Cliente</th>
        <th>Número Cédula</th>
        <th>Placa</th>
        <th>Marca de Vehiculo</th>
        <th>Tipo de Vehiculo</th>
        <th>Número Teléfono</th>
        <th>Email</th>
        <th>Acciones</th>
    </tr>

    @{
        foreach (SistVehiculo.Models.pa_RetornaVehiculosCliente_Result posicionModelo in this.Model)
        {
            <tr>
                <td>@posicionModelo.nomCliente</td>
                <td>@posicionModelo.numCedula</td>
                <td>@posicionModelo.placa</td>
                <td>@posicionModelo.marca</td>
                <td>@posicionModelo.tipo</td>
                <td>@posicionModelo.pTelefono</td>
                <td>@posicionModelo.email</td>
                <td>
                    <a href="~/MantVehiculosCliente/ModificarVehiculosCliente?idVehiculosCliente=@posicionModelo.idVehiculosCliente" class="btn btn-warning btnModificar col-md-12">Modificar</a>
                    <br />
                    <a href="~/MantVehiculosCliente/EliminarVehiculosCliente?idVehiculosCliente=@posicionModelo.idVehiculosCliente" class="btn btn-danger btnEliminar col-md-12">Eliminar</a>
                </td>
            </tr>
        }
    }
</table>