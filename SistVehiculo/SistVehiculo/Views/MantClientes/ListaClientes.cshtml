<!--Indicar a la vista el modelo-->
@model List<SistVehiculo.Models.pa_RetornaCliente_Result>

@section css{
    <link href="~/Content/mantClientes/mantClientes.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "ListaClientes";
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<h2>Lista de Clientes</h2>
<a href="~/MantClientes/InsertarClientes" class="btn btn-success"><i class="fas fa-user-plus"></i> Agregar Cliente</a>
<form id="frmBusquedaClientes" method="post">
    <div class="row">
        <div class="form-group col">
            <label>Número Cédula:</label>
            <input type="text" name="numCedula" id="numCedula" class="form-control" />
        </div>

        <div class="form-group col">
            <label>Nombre:</label>
            <input type="text" name="nomCliente" id="nomCliente" class="form-control" />
        </div>

        <div class="form-group col">
            <label>Primer Apellido:</label>
            <input type="text" name="ape1Cliente" id="ape1Cliente" class="form-control" />
        </div>

        <div class="form-group col">
            <label>Segundo Apellido:</label>
            <input type="text" name="ape2Cliente" id="ape2Cliente" class="form-control" />
        </div>

        <div class="form-group col">
            <button type="submit" id="btnAceptar" class="btn btn-info"><i class="fas fa-search"></i> Buscar</button>
        </div>
    </div>
</form>
<table class="table">
    <tr>
        <th>Nombre Completo</th>
        <th>Correo</th>
        <th>Sexo</th>
        <th>Provincia</th>
        <th>Fecha Nacimiento</th>
        <th>Teléfono</th>
        <th>Tipo Usuario</th>
        <th>Último Ingreso</th>
        <th>Acciones</th>
    </tr>
    <!--Incluir código .net
        Recorrido para la vista
        -->
    @{
        foreach (SistVehiculo.Models.pa_RetornaCliente_Result posicionModelo in this.Model)
        {
            <tr>
                <td>@posicionModelo.ape1Cliente @posicionModelo.ape2Cliente @posicionModelo.nomCliente</td>
                <td>@posicionModelo.email</td>
                <td>@posicionModelo.nombreGenero</td>
                <td>@posicionModelo.nombreProvincia</td>
                <td>@posicionModelo.fechNacimiento.ToString("dd/MM/yyyy")</td>
                <td>@posicionModelo.pTelefono</td>
                <td>@posicionModelo.nombreTipoCliente</td>
                <td>@posicionModelo.ultimoIngreso</td>
                <td>
                    <a href="~/MantClientes/ModificarClientes?idCliente=@posicionModelo.idCliente" class="btn btn-warning btnModificar col-md-6">Modificar</a>
                    <br />
                    <a href="~/Personas/PersonaElimina?id_Persona=@posicionModelo.idCliente" class="btn btn-danger btnEliminar col-md-6">Eliminar</a>
                </td>
            </tr>
        }
    }
</table>

