@model SistVehiculo.Models.pa_RetornaVehiculos_Result

@section css{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
}

@{
    ViewBag.Title = "Modifica Vehículo";
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<h2>Modificar Vehículo</h2>


<form id="frmModificaVehiculo" method="post">
    <div class="form-group">
        <label>Marca:</label>
        <input type="text" name="codigo" id="codigo" class="form-control" value="@Model.marca" />
    </div>

    <div class="form-group">
        <label>Tipo:</label>
        <input type="text" name="tipo" id="tipo" class="form-control" value="@Model.tipo" />
    </div>
    <div class="form-group">
        <label>Tipo de Vehículo:</label>
        <input type="text" name="tipo" id="tipo" class="form-control" value="@Model.tipoVehiculo" />
    </div>
    <div class="form-group">
        <label>Tipo de Vehículo:</label>
        <input type="text" name="tipo" id="tipo" class="form-control" value="@Model.numeroPuerta" />
    </div>
    <div class="form-group">
        <label>Tipo de Vehículo:</label>
        <input type="text" name="tipo" id="tipo" class="form-control" value="@Model.numeroRueda" />
    </div>
    <div class="form-group">
        <input type="submit" value="Modificar" id="btnAceptar" />
    </div>
    <a href="~/MantVehiculos/ListaVehiculos">Regresar a la lista</a>
</form>

@section scripts{
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
    <script src="~/Scripts/mantTiposVehiculos/mantTiposVehiculos.js"></script>
}