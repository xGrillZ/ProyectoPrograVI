<!--Indicar a la vista el modelo-->
@model List<SistVehiculo.Models.pa_RetornaVehiculosList_Result>

@{
    ViewBag.Title = "Lista de Vehículos";
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<h2>Lista de Vehículos</h2>
<a href="~/MantVehiculos/InsertarVehiculos">Agregar nuevo Vehículo</a>

<form id="frmBusquedaListaVehiculos" method="post">
    <div class="row">
        <div class="form-group col">
            <label>Placa:</label>
            <input type="text" name="placa" id="placa" class="form-control" />
        </div>

        <div class="form-group col">
            <button type="submit" id="btnAceptar" class="btn btn-info"><i class="fas fa-search"></i> Buscar por placa</button>
        </div>
    </div>
</form>

<table class="table">
    <tr>
        <th>Placa</th>
        <th>Marca</th>
        <th>Tipo de Vehículo</th>
        <th>Número de puertas</th>
        <th>Número de ruedas</th>
       <th>Acciones</th>
    </tr>

    @{
        foreach (SistVehiculo.Models.pa_RetornaVehiculosList_Result posicionModelo in this.Model)
        {
            <tr>
                <td>@posicionModelo.placa</td>
                <td>@posicionModelo.marca</td>
                <td>@posicionModelo.tipo</td>
                <td>@posicionModelo.numeroPuerta</td>
                <td>@posicionModelo.numeroRueda</td>
                <td>
                    <a href="~/MantVehiculos/ModificarVehiculos?idVehiculos=@posicionModelo.idVehiculos">Modificar</a>
                    <br />
                    <a href="~/MantVehiculos/EliminarVehiculos?idVehiculos=@posicionModelo.idVehiculos">Eliminar</a>
                </td>
            </tr>
        }
    }
</table>