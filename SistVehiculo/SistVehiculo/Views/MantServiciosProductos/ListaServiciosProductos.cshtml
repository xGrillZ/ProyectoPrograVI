<!--Indicar a la vista el modelo-->
@model List<SistVehiculo.Models.pa_RetornaTipoServicioProducto_Result>

@section css{
    <link href="~/Content/mantServiciosProductos/mantServiciosProductos.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Lista Servicios";
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<h2>Lista de Servicios y Productos</h2>
<a href="~/MantServiciosProductos/InsertarServiciosProductos" class="btn btn-success"><i class="fas fa-user-plus"></i> Agregar Cliente</a>
<form id="frmBusquedaServiciosProductos" method="post">
    <div class="row">
        <div class="form-group col">
            <label>Descripción:</label>
            <input type="text" name="descripcion" id="descripcion" class="form-control" />
        </div>

        <div class="form-group col">
            <label>Tipo:</label>
            <input type="text" name="tipo" id="tipo" class="form-control" />
        </div>

        <div class="form-group col">
            <button type="submit" id="btnAceptar" class="btn btn-info"><i class="fas fa-search"></i> Buscar</button>
        </div>
    </div>
</form>
<table class="table">
    <tr>
        <th>Código</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Tipo</th>
        <th>Acciones</th>
    </tr>
    <!--Incluir código .net
        Recorrido para la vista
        -->
    @{
        foreach (SistVehiculo.Models.pa_RetornaTipoServicioProducto_Result posicionModelo in this.Model)
        {
            <tr>
                <td>@posicionModelo.codigo</td>
                <td>@posicionModelo.descripcion</td>
                <td>₡@posicionModelo.precio</td>
                <td>@posicionModelo.nombreClasificacion</td>
                <td>
                    <a href="~/MantServiciosProductos/ModificarServiciosProductos?idTipoServicioProducto=@posicionModelo.idTipoServicioProducto" class="btn btn-warning btnModificar col-md-6">Modificar</a>
                    <br />
                    <a href="~/MantServiciosProductos/EliminarServiciosProductos?idTipoServicioProducto=@posicionModelo.idTipoServicioProducto" class="btn btn-danger btnEliminar col-md-6">Eliminar</a>
                </td>
            </tr>
        }
    }
</table>