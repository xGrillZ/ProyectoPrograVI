@section css{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
}

@{
    ViewBag.Title = "Nuevo Servicio y Producto";
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<h2>Nuevo Servicio o Producto</h2>

<form id="frmNuevoServicioProducto" method="post">
    <div class="form-group">
        <label>Código:</label>
        <input type="text" name="codigo" id="codigo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Descripción:</label>
        <input type="text" name="descripcion" id="descripcion" class="form-control" />
    </div>

    <div class="form-group">
        <label>Precio:</label>
        <input type="text" name="precio" id="precio" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tipo:</label>
        <select name="tipo" id="tipo" class="form-control">
            <option value="">Seleccione una clasificación</option>
            @{
                foreach (SistVehiculo.Models.pa_RetornaClasificacionSP_Result clasificacion in this.ViewBag.ListaClasificacion)
                {
                    /*Almacena el ID del género y muestra el nombre del género*/
                    <option value="@clasificacion.id_clasificacionSP">@clasificacion.nombreClasificacion</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Registrar" id="btnAceptar" />
    </div>
    <a href="~/MantServiciosProductos/ListaServiciosProductos">Regresar a la lista</a>
</form>

@section scripts{
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
    <script src="~/Scripts/mantServiciosProductos/mantServiciosProductos.js"></script>
}